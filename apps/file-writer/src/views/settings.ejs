<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Pythias Technologies File Writer</title>
    <link rel="stylesheet" href="index.css" />
    <link rel="icon" href="/logo-dark-50.png">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body style="background: #faf9f9;">
    <%- include('partials/menu.ejs') %>
    <div style="width: 100%;">
      <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
          <img src="/logo-dark-400.png" width="100%" height="auto" style="width: 100%; height: auto;"/>
          
        </div>
        <div class="col-4"></div>
        <div class="col-1"></div>
        <div class="col-10">
            <h3 style="text-align: center; font-size: 1.5rem">Hot Folders</h3>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="DTF Hot Folder" aria-label="Recipient's username" aria-describedby="basic-addon2" disabled id="dtf-hot-folder">
                <span class="input-group-text" id="basic-addon2" style="background-color: #b4d6b4; cursor: pointer" onclick="selectDirectory('dtf-hot-folder')">Select DTF Hot Folder</span>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="ROQ Hot Folder" aria-label="Recipient's username" aria-describedby="basic-addon2" disabled id="roq-hot-folder">
                <span class="input-group-text" id="basic-addon2" style="background-color: #b4d6b4; cursor: pointer" onclick="selectDirectory('roq-hot-folder')">Select ROQ Hot Folder</span>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="11oz Mug Hot Folder" aria-label="Recipient's username" aria-describedby="basic-addon2" disabled id="11oz-hot-folder">
                <span class="input-group-text" id="basic-addon2" style="background-color: #b4d6b4; cursor: pointer" onclick="selectDirectory('11oz-hot-folder')">Select 11oz Mug Hot Folder</span>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="15oz Mug Hot Folder" aria-label="Recipient's username" aria-describedby="basic-addon2" disabled id="15oz-hot-folder">
                <span class="input-group-text" id="basic-addon2" style="background-color: #b4d6b4; cursor: pointer" onclick="selectDirectory('15oz-hot-folder')">Select 15oz Mug Hot Folder</span>
            </div>
             <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Epson Hot Folder" aria-label="Recipient's username" aria-describedby="basic-addon2" disabled id="epson-hot-folder">
                <span class="input-group-text" id="basic-addon2" style="background-color: #b4d6b4; cursor: pointer" onclick="selectDirectory('epson-hot-folder')">Select Epson Hot Folder</span>
            </div>
            <h3 style="text-align: center; font-size: 1.5rem">Auto Printers</h3>
        </div>
        <div class="col-1"></div>
      </div>
      
    </div>
    
    <script type="text/javascript">
     let selectDirectory = (im)=>{
        window.electronAPI.selectFolder().then(result=>{
            console.log(result)
            document.getElementById(im).value = result
        })
     }
    </script>
  </body>
</html>
